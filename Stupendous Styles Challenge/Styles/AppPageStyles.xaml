<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Stupendous_Styles_Challenge.Styles">

    <Thickness x:Key="DefaultItemMargin">0,0,20,0</Thickness>

    <Style TargetType="Grid" x:Key="DefaultPageStyle">
        <Setter Property="Padding" Value="50"/>
    </Style>

    <Style TargetType="Image" x:Key="WhiteLogoStyle">
        <Setter Property="Source" Value="ms-appx:/Assets/Logo/white-logo.png"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="PageTextStyle">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="{StaticResource DefaultItemMargin}"/>
    </Style>
    
</ResourceDictionary>
